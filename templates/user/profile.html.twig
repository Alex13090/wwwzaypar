{% extends 'base.html.twig' %}

{% import 'block/breadcrumb.html.twig' as breadcrumb %}
{% set listfonticons = ['fa fa-home', '', '', ''] %}
{% set listname = ['Epicerie asiatique', 'Espace client'] %}
{% set listurls = ['home', 'app_profil'] %}

{% set description = "Bienvenue dans votre espace client" %}
{% set keywords = "" %}

{% block description %}{{ description }}{% endblock %}
{% block keywords %}{{ keywords }}{% endblock %}

{% block body %}
    <div class="page-content-wrapper">
        <div class="page-content container">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    {{ breadcrumb.show(listname, listurls, listfonticons) }}
                </div>
            </div>

            <section class="container mt-5">
                <div class="shadow bg-white rounded p-5">
                    <h1>Votre profil</h1>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <ul class="mt-5">
                        <li class="row border border-light p-2 mb-3">
                            <div class="col-md-6 col-sm-12">
                                <h6>Nom:</h6>
                                <span>{{ app.user.lastname }}</span>
                            </div>
                            <aside class="col-md-6 col-sm-12">
                                <div>
                                    <a href="" class="btn btn-outline-success">modifier</a>
                                </div>
                            </aside>
                        </li>
                        <li class="row border border-light p-2 mb-3">
                            <div class="col-md-6 col-sm-12">
                                <h6>Prénom:</h6>
                                <span>{{ app.user.firstname }}</span>
                            </div>
                        </li>
                        <li class="row border border-light p-2 mb-3">
                            <div class="col-md-6 col-sm-12">
                                <h6>Adresse:</h6>
                                <span>{{ app.user.address }}</span>
                            </div>
                            <aside class="col-md-6 col-sm-12">
                                <div>
                                    <a href="" class="btn btn-outline-success">modifier</a>
                                </div>
                            </aside>
                        </li>
                        <li class="row border border-light p-2 mb-3">
                            <div class="col-md-6 col-sm-12">
                                <h6>Code postal:</h6>
                                <span>{{ app.user.zipcode }}</span>
                            </div>
                            <aside class="col-md-6 col-sm-12">
                                <div>
                                    <a href="" class="btn btn-outline-success">modifier</a>
                                </div>
                            </aside>
                        </li>
                        <li class="row border border-light p-2 mb-3">
                            <div class="col-md-6 col-sm-12">
                                <h6>Ville:</h6>
                                <span>{{ app.user.city }}</span>
                            </div>
                            <aside class="col-md-6 col-sm-12">
                                <div>
                                    <a href="" class="btn btn-outline-success">modifier</a>
                                </div>
                            </aside>
                        </li>
                        <li class="row border border-light p-2 mb-3">
                            <div class="col-md-6 col-sm-12">
                                <h6>Téléphone:</h6>
                                <span>{{ app.user.phone }}</span>
                            </div>
                            <aside class="col-md-6 col-sm-12">
                                <div>
                                    <a href="" class="btn btn-outline-success">modifier</a>
                                </div>
                            </aside>
                        </li>
                        <li class="row border border-light p-2 mb-3">
                            <div class="col-md-6 col-sm-12">
                                <h6>E-mail:</h6>
                                <span>{{ app.user.email }}</span>
                            </div>
                            <aside class="col-md-6 col-sm-12">
                                <div>
                                    <a href="" class="btn btn-outline-success">modifier</a>
                                </div>
                            </aside>
                        </li>
                    </ul>
                    <li class="row mt-3 bg-light">
                        <aside class="col-md-6 col-sm-12 d-flex p-3">
                            <p class="align-self-center mb-0">Vous voulez modifier votre mot de passe?</p>
                            <a href="" class="btn btn-secondary">modifier mot de passe</a>
                        </aside>
                        <div class="col-md-6 col-sm-12 d-flex justify-content-end p-3">
                            <a href="{{ path('app_logout') }}" class="btn btn-secondary">Me
                                déconnecter</a>
                        </div>
                    </li>
                </div>
                {% endif %}
            </section>
        </div>
    </div>
    </div>
{% endblock %}